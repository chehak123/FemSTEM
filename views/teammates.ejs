              <% } else { %>
                <li class="nav-item">
                <a class="nav-link " href="/logout">Logout</a>
                </li>
              <% } %>      
           
          </ul>
        </div>
      </div>
    </nav>

    <!-- Find your teammates -->
    <div class="container">     
        <div class="hiddenCB top-con">
          <h3>I need teammates with skills...</h3>
          <p>Find your perfect team for your upcoming hackathon. Simply select the skill tags you are looking for in your teammates.</p>
        
          <form method="POST" action="/teammates">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="checked" id="cb1" value="uiux" onChange="this.form.submit()" /><label class="tag-team" for="cb1">UI-UX</label>
              <input class="form-check-input" type="checkbox" name="checked" id="cb2" value="graphicdes" onChange="this.form.submit()" /><label class="tag-team" for="cb2">Graphic Designing</label>
              <input class="form-check-input" type="checkbox" name="checked" id="cb3" value="fedev" onChange="this.form.submit()" /><label class="tag-team" for="cb3">Front-end Development</label>
              <input class="form-check-input" type="checkbox" name="checked" id="cb4" value="bedev" onChange="this.form.submit()" /><label class="tag-team" for="cb4">Back-end Development</label>
              <input class="form-check-input" type="checkbox" name="checked" id="cb5" value="db" onChange="this.form.submit()" /><label class="tag-team" for="cb5">Databases</label>
              <input class="form-check-input" type="checkbox" name="checked" id="cb6" value="modev" onChange="this.form.submit()" /><label class="tag-team" for="cb6">Mobile Development</label>
              <input class="form-check-input" type="checkbox" name="checked" id="cb7" value="ml" onChange="this.form.submit()" /><label class="tag-team" for="cb7">Machine Learning</label>
              <input class="form-check-input" type="checkbox" name="checked" id="cb8" value="av" onChange="this.form.submit()" /><label class="tag-team" for="cb8">AR-VR</label>
              <input class="form-check-input" type="checkbox" name="checked" id="cb9" value="gd" onChange="this.form.submit()" /><label class="tag-team" for="cb9">Game Development</label>
              <input class="form-check-input" type="checkbox" name="checked" id="cb10" value="fs" onChange="this.form.submit()" /><label class="tag-team" for="cb10">Full-stack Development</label>
              <input class="form-check-input" type="checkbox" name="checked" id="cb11" value="fl" onChange="this.form.submit()" /><label class="tag-team" for="cb11">Flutter</label>             
              <input class="form-check-input" type="checkbox" name="checked" id="cb12" value="dsa" onChange="this.form.submit()" /><label class="tag-team" for="cb12">Data Structures & Algorithms</label>
              <input class="form-check-input" type="checkbox" name="checked" id="cb13" value="ds" onChange="this.form.submit()" /><label class="tag-team" for="cb13">Data Science</label>
              <input class="form-check-input" type="checkbox" name="checked" id="cb14" value="clang" onChange="this.form.submit()" /><label class="tag-team" for="cb14">C++</label>
              <input class="form-check-input" type="checkbox" name="checked" id="cb15" value="java" onChange="this.form.submit()" /><label class="tag-team" for="cb15">Java</label>

              <input class="form-check-input" type="checkbox" name="checked" id="cb23" value="php" onChange="this.form.submit()" /><label class="tag-team" for="cb23">PHP</label>
              
              <input class="form-check-input" type="checkbox" name="checked" id="cb16" value="js" onChange="this.form.submit()" /><label class="tag-team" for="cb16">Javascript</label>
              <input class="form-check-input" type="checkbox" name="checked" id="cb17" value="htm" onChange="this.form.submit()" /><label class="tag-team" for="cb17">HTML 5, CSS 3</label>
              <input class="form-check-input" type="checkbox" name="checked" id="cb18" value="mon" onChange="this.form.submit()" /><label class="tag-team" for="cb18">Mongo/ Cockroach/ Cassandra</label>
              <input class="form-check-input" type="checkbox" name="checked" id="cb19" value="nod" onChange="this.form.submit()" /><label class="tag-team" for="cb19">Node.js</label>
              <input class="form-check-input" type="checkbox" name="checked" id="cb20" value="py" onChange="this.form.submit()" /><label class="tag-team" for="cb20">Python</label>
              <input class="form-check-input" type="checkbox" name="checked" id="cb21" value="rea" onChange="this.form.submit()" /><label class="tag-team" for="cb21">React, React Native</label>
              <input class="form-check-input" type="checkbox" name="checked" id="cb22" value="ang" onChange="this.form.submit()" /><label class="tag-team" for="cb22">Angular</label>
            </div>

            <div class="row">
              <div class="col-7 col-md-4">
                <button type="submit" class="submit-btn" style="margin-top: 4%; margin-bottom: 2%; width: 20%; border-radius: 8px; color: #fff;">Find Teammates</button>
              </div>
            </div>            
          </form>      
        </div>    
    </div>
    <hr>
    
